/* 页面占满 & 居中 */
page { height: 100%; }
.container {
  min-height: 100vh;  /* 让容器占满屏幕高度 */
  padding: 32rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.city-title { font-size: 40rpx; font-weight: 700; text-align: center; margin-top: 24rpx; }

.center-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  justify-content: center;   /* 垂直居中 */
  align-items: center;       /* 水平居中 */
}

.primary { width: 70%; }
.ghost { width: 70%; border: 2px solid #ddd; }
