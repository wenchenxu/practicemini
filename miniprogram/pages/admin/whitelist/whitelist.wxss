.wrap { padding: 24rpx; }
.card { background: #fff; border-radius: 16rpx; padding: 24rpx; margin-bottom: 24rpx; box-shadow: 0 4rpx 16rpx rgba(0,0,0,.04); }
.title { font-weight: 600; margin-bottom: 16rpx; }
.row { display: flex; gap: 12rpx; align-items: center; margin-bottom: 12rpx; }
.ipt { flex: 1; border: 1rpx solid #eee; border-radius: 8rpx; padding: 12rpx 16rpx; }
.picker { padding: 12rpx 16rpx; border: 1rpx solid #eee; border-radius: 8rpx; }
.btn { margin-top: 8rpx; }
.item { display: flex; justify-content: space-between; align-items: center; padding: 16rpx 0; border-bottom: 1rpx dashed #f0f0f0; }
.main { display: grid; gap: 6rpx; }
.name { font-size: 30rpx; }
.sub { font-size: 24rpx; color: #888; max-width: 580rpx; word-break: break-all; }
.tag { display: inline-block; font-size: 22rpx; color: #555; background: #f5f5f5; padding: 4rpx 10rpx; border-radius: 8rpx; width: fit-content; }
.empty { color: #888; text-align: center; padding: 24rpx 0; }
