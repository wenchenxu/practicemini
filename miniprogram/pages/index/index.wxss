.container { padding: 24rpx; }
.title {
    font-size: 36rpx;
    font-weight: 600;
    margin-bottom: 24rpx;
    padding-top: 30rpx;
}
.grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 20rpx; }

.grid button {
    width: 100%;
    padding: 24rpx 0;
    border-radius: 12rpx;
    box-sizing: border-box;
}

.city {
    background: #f5f7fa;
    color: #333;
    border: 1px solid #e5e7eb;
}

.admin-btn {
    background: #1e88e5;
    color: #fff;
    border: none;
}

.admin-btn::after,
.city::after {
    border: none;
}

.fadada-test-entry button {
    width: 100%;
    border-radius: 12rpx;
}
.fadada-test-entry {
    margin: 24rpx 24rpx 0 24rpx;
  }
.container-corp-management { padding: 24rpx; margin-top: 30rpx;}