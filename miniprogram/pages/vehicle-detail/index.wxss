/* 全局背景 */
.page-container {
    min-height: 100vh;
    background-color: #f7f8fa;
    padding: 24rpx;
    box-sizing: border-box;
    padding-bottom: 60rpx;
  }
  
  /* 卡片通用样式 */
  .card {
    background: #ffffff;
    border-radius: 16rpx;
    padding: 30rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 2rpx 12rpx rgba(100, 101, 102, 0.05);
  }
  
  /* 标题栏 */
  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .card-header-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24rpx;
  }
  
  /* 车牌号大字 */
  .plate-number {
    font-size: 40rpx;
    font-weight: bold;
    color: #323233;
    font-family: 'DINAlternate-Bold', sans-serif;
  }
  
  /* 标签组 */
  .tags-row {
    display: flex;
    gap: 12rpx;
  }
  
  .tag {
    padding: 4rpx 12rpx;
    border-radius: 8rpx;
    font-size: 22rpx;
    font-weight: 500;
  }
  .tag-blue { background: #e8f3ff; color: #1989fa; }
  .tag-green { background: #e8ffea; color: #07c160; }
  .tag-orange { background: #fffbe8; color: #ff976a; }
  
  /* 分割线 */
  .divider {
    height: 1rpx;
    background: #ebedf0;
    margin: 24rpx 0;
  }
  .divider-dashed {
    height: 1rpx;
    border-bottom: 1rpx dashed #ebedf0;
    margin: 20rpx 0;
  }
  
  /* 网格布局 (3列) */
  .info-grid {
    display: flex;
    flex-wrap: wrap;
  }
  
  .grid-item {
    width: 33.33%; /* 一行三个 */
    display: flex;
    flex-direction: column;
    margin-bottom: 16rpx;
  }
  
  .label {
    font-size: 24rpx;
    color: #969799;
    margin-bottom: 8rpx;
  }
  
  .value {
    font-size: 28rpx;
    color: #323233;
    font-weight: 500;
  }
  
  /* 列表式详情 (保险/年审) */
  .detail-list {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
  }
  .detail-row {
    display: flex;
    flex-direction: column;
  }
  
  /* 章节标题 */
  .section-title {
    font-size: 30rpx;
    font-weight: bold;
    color: #323233;
    border-left: 8rpx solid #1989fa;
    padding-left: 16rpx;
    margin-bottom: 24rpx;
  }
  
  /* 操作按钮行 */
  .action-row-fill {
    display: flex;
    justify-content: space-between; /* 两端对齐 */
    gap: 24rpx; /* 两个按钮之间的间距 */
  }
  
  .btn-wrapper {
    flex: 1; /* 每个按钮占据剩余空间的一半 */
  }
  
  /* ▼▼▼ 历史记录卡片样式 ▼▼▼ */
  .card-header-arrow {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10rpx 0; /* 增加一点点击区域 */
  }
  
  /* 弹窗内的输入框样式 (保留之前的逻辑) */
  .input-item {
    display: flex;
    align-items: center;
    margin-bottom: 24rpx;
  }
  .input-label {
    width: 180rpx;
    font-size: 28rpx;
    color: #646566;
  }
  .picker-box {
    flex: 1;
    height: 72rpx;
    line-height: 72rpx;
    background: #f7f8fa;
    padding: 0 20rpx;
    border-radius: 8rpx;
    font-size: 28rpx;
    color: #323233;
  }