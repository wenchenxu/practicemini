/* 页面容器 */
.page {
    min-height: 100vh;
    background: #f5f5f5;
    padding-bottom: 40rpx;
    box-sizing: border-box;
  }
  
  /* 顶部标题 */
  .header {
    font-size: 34rpx;
    font-weight: 600;
    padding: 28rpx 32rpx;
    background: #ffffff;
    border-bottom: 1rpx solid #eeeeee;
  }
  
  /* 加载/空状态 */
  .loading,
  .empty {
    padding: 40rpx;
    text-align: center;
    color: #888888;
    font-size: 28rpx;
  }
  
  /* 信息分区卡片 */
  .section {
    background: #ffffff;
    margin-top: 20rpx;
    padding: 28rpx 32rpx;
    border-bottom: 1rpx solid #f0f0f0;
  }
  
  /* 标签 */
  .label {
    display: block;
    font-size: 26rpx;
    color: #666666;
    margin-bottom: 8rpx;
  }
  
  /* 值 */
  .value {
    font-size: 30rpx;
    font-weight: 500;
    color: #222222;
  }
  
  /* 操作按钮区域 */
  .btn-row {
    margin-top: 20rpx;
    display: flex;
    flex-direction: row;
    gap: 20rpx;
  }
  
  /* 控制原生按钮大小与视觉 */
  button[size="mini"] {
    padding: 0 20rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 26rpx;
    border-radius: 12rpx;
  }

  .sub-value {
    font-size: 26rpx;
    color: #666;
    margin-top: 4rpx;
  }

  .input-item {
    margin-bottom: 20rpx;
  }
  .input-label {
    font-size: 28rpx;
    color: #666;
    margin-bottom: 10rpx;
  }
  .picker-box {
    border: 1rpx solid #ddd;
    padding: 15rpx;
    border-radius: 8rpx;
    font-size: 30rpx;
    color: #333;
    background-color: #f8f8f8; /* 稍微给点背景色表示可点击 */
  }