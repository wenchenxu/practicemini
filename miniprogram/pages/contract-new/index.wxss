.container { padding: 24rpx; }
.header { display: flex; align-items: baseline; gap: 12rpx; margin-bottom: 20rpx; }
.city { font-size: 34rpx; font-weight: 600; }
.mode { font-size: 28rpx; color: #888; }
.form-item { margin-bottom: 20rpx; }
.label { display:block; margin-bottom: 8rpx; color:#333; }
.req { color: #e5484d; margin-right: 6rpx; }
.tip { color:#999; font-size: 24rpx; margin-left: 6rpx; }
.input, .picker { border:1px solid #ddd; border-radius: 10rpx; padding: 18rpx; }
.btn-row { margin-top: 24rpx; }
.btn { border-radius: 12rpx; }
.footer-actions { padding: 16rpx 24rpx 40rpx; }
.footer-actions button { height: 88rpx; line-height: 88rpx; font-weight: 600; }
.readonly-field { padding: 16rpx 0; }
.readonly-field .label { color:#888; margin-right: 16rpx; }
.readonly-field .value { font-weight: 600; }
.label-contractType { display:block; margin-bottom: 8rpx; margin-top: 50rpx; margin-left: 100rpx; color:#333; }
.picker-value-contractType { display:block; margin-bottom: 8rpx; margin-left: 100rpx; color:#333; }
.value-contractType { display:block; margin-bottom: 8rpx; margin-left: 100rpx; color:#333; }