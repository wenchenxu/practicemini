page {
    background-color: #F6F7F9;
    color: #333;
  }
  
  .container {
    padding: 24rpx;
    padding-bottom: 120rpx; /* 给底部按钮留空 */
  }
  
  /* === 通用卡片样式 === */
  .section-card {
    background: #fff;
    border-radius: 16rpx;
    padding: 24rpx 30rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
  }
  
  .card-title {
    font-size: 30rpx;
    font-weight: 600;
    margin-bottom: 24rpx;
    color: #222;
    border-left: 8rpx solid #1677ff;
    padding-left: 16rpx;
    line-height: 1;
  }
  
  /* === 顶部配置行 (Row Picker) === */
  .row-picker {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 24rpx 0;
    border-bottom: 1rpx solid #f0f0f0;
  }
  
  .row-picker.no-border {
    border-bottom: none;
  }
  
  .row-label {
    font-size: 28rpx;
    color: #333;
    width: 180rpx;
  }
  
  .picker-flex {
    flex: 1;
    text-align: right;
  }
  
  .picker-text {
    font-size: 28rpx;
    color: #333;
  }
  
  .picker-text.placeholder {
    color: #ccc;
  }
  
  .row-arrow {
    color: #ccc;
    font-size: 32rpx;
    margin-left: 12rpx;
    font-family: monospace;
  }
  
  /* === 主表单区域 === */
  .form-wrap {
    display: flex;
    flex-wrap: wrap; /* 允许换行 */
    justify-content: space-between; /* 两端对齐，中间留空 */
  }
  
  .form-item {
    width: 100%; /* 默认占满一行 */
    margin-bottom: 28rpx;
  }
  
  /* ↓↓↓↓ 这里实现日期并排 ↓↓↓↓ */
  .item-contractValidPeriodStart,
  .item-contractValidPeriodEnd {
    width: 48%; /* 两个 48% 加起来不到 100%，中间会有空隙 */
  }
  
  .item-rentMonthly,
  .item-rentToday {
    /* 如果你也想让租金和首付并排，可以把这两行注释打开 */
    width: 48%;
  }
  
  .label {
    display: block;
    font-size: 26rpx;
    color: #555;
    margin-bottom: 12rpx;
  }
  
  .req {
    color: #e5484d;
    margin-right: 4rpx;
  }
  
  .tip {
    color: #999;
    font-size: 22rpx;
    margin-left: 6rpx;
  }
  
  /* === 输入框/选择器样式优化 === */
  .input-box {
    background: #F7F8FA; /* 浅灰背景，不使用边框 */
    border-radius: 12rpx;
    padding: 20rpx 24rpx;
    font-size: 28rpx;
    color: #333;
    height: 48rpx; /* 加上padding总高 88rpx */
    line-height: 48rpx;
  }
  
  .input-box.ph {
    color: #ccc;
  }
  
  .picker-box {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .date-icon {
    font-size: 24rpx;
    filter: grayscale(1);
    opacity: 0.5;
  }
  
  /* === 底部按钮 === */
  .footer-actions {
    margin-top: 40rpx;
  }
  
  .submit-btn {
    border-radius: 999rpx; /* 圆角按钮 */
    font-weight: 600;
    font-size: 32rpx;
    box-shadow: 0 6rpx 16rpx rgba(22, 119, 255, 0.2);
  }
  
  .btn-row {
    padding: 30rpx 0;
  }
  
  .btn-edit {
    background: #fff;
    color: #666;
    border: 1rpx solid #ddd;
    border-radius: 999rpx;
  }
  
  /* Header for Edit/View Mode */
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
  }
  .header-tag {
    font-size: 40rpx;
    font-weight: bold;
  }
  .header-info {
    text-align: right;
  }
  .mode-text {
    display: block;
    font-size: 24rpx;
    color: #999;
  }
  .type-text {
    font-size: 28rpx;
    color: #1677ff;
    font-weight: 500;
  }