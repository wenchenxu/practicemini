<view class="container">
  <image class="img" src="/assets/lock.png" mode="aspectFit"></image>
  <view class="title">无访问权限</view>
  <view class="desc">此小程序仅限公司内部人员使用</view>

  <!-- 提供一个复制 openid 的按钮，便于你手动加白名单（MVP 实用） -->
  <button class="btn" bindtap="copyOpenid">复制我的 OpenID（发给管理员）</button>
  <button class="btn" bindtap="showAudit">审核入口</button>
</view>

<view wx:if="{{showAudit}}" class="audit">
  <input class="ipt" placeholder="请输入审核口令" bindinput="onAuditInput"/>
  <button class="btn" type="primary" bindtap="tryAudit">确认</button>
</view>
