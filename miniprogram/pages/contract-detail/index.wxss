/* pages/contract-detail/index.wxss */
.container {
    padding: 30rpx;
    background-color: #f7f8fa;
    min-height: 100vh;
  }
  
  .header-section {
    background: #fff;
    padding: 30rpx;
    border-radius: 12rpx 12rpx 0 0;
    border-bottom: 1rpx solid #eee;
  }
  
  .title {
    font-size: 34rpx;
    font-weight: bold;
    color: #333;
  }
  
  .sub-title {
    font-size: 24rpx;
    color: #999;
    margin-top: 10rpx;
  }
  
  .info-list {
    background: #fff;
    padding: 0 30rpx 30rpx;
    border-radius: 0 0 12rpx 12rpx;
  }
  
  .item {
    display: flex;
    justify-content: space-between;
    padding: 24rpx 0;
    border-bottom: 1rpx solid #f5f5f5;
    font-size: 28rpx;
  }
  
  .label {
    color: #666;
  }
  
  .value {
    color: #333;
    font-weight: 500;
    text-align: right;
    max-width: 60%;
  }
  
  .divider {
    height: 20rpx; /* 视觉间隔 */
    border-bottom: 1rpx dashed #eee;
    margin-bottom: 10rpx;
  }
  
  .loading {
    text-align: center;
    color: #999;
    margin-top: 100rpx;
  }