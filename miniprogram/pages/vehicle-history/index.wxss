/* pages/vehicle-history/index.wxss */
.page {
    min-height: 100vh;
    background: #f5f5f5;
    padding-bottom: 40rpx;
  }
  
  .header {
    padding: 28rpx 32rpx;
    background: #ffffff;
    font-size: 32rpx;
    font-weight: 600;
    border-bottom: 1rpx solid #eeeeee;
  }
  
  .hint {
    text-align: center;
    color: #888;
    padding: 40rpx 0;
  }
  
  .item {
    background: #ffffff;
    margin: 20rpx;
    padding: 26rpx 32rpx;
    border-radius: 16rpx;
    box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.03);
  }
  
  .row1 {
    display: flex;
    justify-content: space-between;
    margin-bottom: 12rpx;
  }
  
  .time {
    font-size: 26rpx;
    color: #666;
  }
  
  .status-change {
    font-size: 28rpx;
    font-weight: 600;
    color: #333;
  }
  
  .row2 {
    font-size: 26rpx;
    color: #555;
    margin-top: 8rpx;
  }
  