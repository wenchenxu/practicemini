/* pages/dev-tools/index.wxss */
.container { padding: 32rpx; background: #f7f7f7; min-height: 100vh; }
.header { font-size: 36rpx; font-weight: 600; margin-bottom: 32rpx; color: #333; }
.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}
.title { font-size: 30rpx; font-weight: 600; margin-bottom: 16rpx; }
.desc { font-size: 26rpx; color: #666; margin-bottom: 32rpx; line-height: 1.5; }
.danger-zone {
    border: 2rpx solid #ffccc7;
    background: #fff1f0;
  }
  
.danger-text {
    color: #cf1322;
  }
  
.input-group {
    margin-bottom: 24rpx;
  }
  
.input-group .label {
    font-size: 24rpx;
    color: #666;
    margin-bottom: 8rpx;
    display: block;
  }
  
.input-group .input {
    background: #fff;
    border: 1rpx solid #d9d9d9;
    padding: 16rpx;
    border-radius: 8rpx;
    font-size: 28rpx;
  }