.container {
    min-height: 100vh;
    background: #f5f5f5;
    padding: 24rpx;
    box-sizing: border-box;
  }
  
  .header {
    margin-bottom: 20rpx;
    background: #ffffff;
    padding: 24rpx 20rpx 16rpx;
    border-radius: 16rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  }
  
  .title {
    font-size: 32rpx;
    font-weight: 600;
    color: #222222;
  }

.tabs {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.tab {
  padding: 16rpx 28rpx;
  background: #f7f8fa;
  border-radius: 999rpx;
  font-size: 28rpx;
  color: #555555;
  border: 1rpx solid #e6e6e6;
}

.tab.on {
  background: #1677ff;
  color: #ffffff;
  border-color: #1677ff;
}

.tab.debug {
  background: #fff6e5;
  color: #9a5b00;
  border-color: #ffe7c2;
}

.empty {
  color: #888888;
  padding: 40rpx 0;
  text-align: center;
  font-size: 26rpx;
}

.row {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 20rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 16rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
}

.row-main {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.file-title {
    display: flex;
    flex-direction: column;
    gap: 6rpx;
  }
  
  .file-title .name {
    font-size: 30rpx;
    font-weight: 600;
    color: #222222;
  }
  
  .file-title .plate {
    font-size: 26rpx;
    color: #1677ff;
  }
  
  .file-title.clickable .name,
  .file-title.clickable .plate {
    text-decoration: underline;
  }
  
  .file-title.disabled {
    opacity: 0.75;
  }
  
  .sub {
    color: #666666;
    font-size: 24rpx;
}

.status-line {
  color: #1677ff;
  font-size: 24rpx;
}

.driver-action {
    display: flex;
    align-items: center;
    margin-top: 4rpx;
  }

.load-more {
  text-align: center;
  margin-top: 12rpx;
}

.ops {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  align-items: flex-end;
  min-width: 200rpx;
}

.icon-row {
    display: flex;
    flex-direction: row;
    gap: 12rpx;
}

.icon-btn {
    width: 72rpx;
    height: 72rpx;
    border-radius: 12rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.9;
    background: #f7f8fa;
}
  
.icon-btn--hover {
    opacity: 0.75;
}
  
.icon-btn .icon {
    width: 60rpx;
    height: 60rpx;
}

.mini-op {
    font-size: 24rpx;
    padding: 8rpx 20rpx;
}

.refresh-btn {
    padding: 8rpx 20rpx;
}

/* 工具栏样式 */
.tools-bar {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  gap: 16rpx;
}

/* 日期选择器 */
.date-picker {
  background: #fff;
  padding: 14rpx 20rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #666;
  display: flex;
  align-items: center;
  border: 1rpx solid #eee;
  white-space: nowrap;
}

.date-picker.active {
  color: #1677ff;
  border-color: #1677ff;
  background: #e6f7ff;
}

.date-picker .arrow {
  margin-left: 8rpx;
  font-size: 20rpx;
  color: #999;
}

.date-clear {
  padding: 10rpx;
  color: #999;
  font-size: 28rpx;
  margin-left: -10rpx; /* 紧贴着日期框 */
}

/* 搜索框 */
.search-box {
  flex: 1;
  background: #fff;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 14rpx 20rpx;
  border: 1rpx solid #eee;
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  margin-left: 12rpx;
  color: #333;
}

.search-clear {
  padding: 0 10rpx;
  color: #ccc;
  font-size: 28rpx;
}