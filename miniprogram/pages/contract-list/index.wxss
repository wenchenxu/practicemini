.container { padding: 20rpx; }
.header { margin-bottom: 10rpx; }
.title { font-size: 34rpx; font-weight: 600; }

/* 新增 tabs */
.tabs {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 20rpx;
}
.tab {
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  border-radius: 999rpx;
  font-size: 32rpx;
  color: #555;
}
.tab.on {
  background: #1677ff;
  color: #fff;
}
.tab.debug {
  background: #fff6e5;
  color: #9a5b00;
}

.empty { color: #888; padding: 40rpx 0; text-align: center; }

.row {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: 40rpx 0rpx;
  border-bottom: 1px solid #f0f0f0;
  gap: 20rpx;
}

.row-main {
  flex: 1;
  min-width: 0;
}

.meta .primary,
.row-main .primary {
  font-size: 32rpx;
  font-weight: 520;
}

.meta .sub,
.row-main .sub {
  color: rgb(31, 103, 211);
  font-size: 28rpx;
  margin-top: 6rpx;
}

.status-line {
  color: #1677ff;
  font-size: 24rpx;
}

.ops {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.load-more { text-align: center; margin-top: 20rpx; }

.primary.clickable { text-decoration: underline; }
.primary.disabled { opacity: 0.7; }

.icon-btn {
  width: 75rpx;
  height: 75rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
}
.icon-btn--hover { opacity: .7; }
.icon-btn .icon { width: 64rpx; height: 64rpx; }
.icon-btn.danger { background: #fff0f0; }

.ops {
    display: flex;
    flex-direction: column;
    gap: 12rpx;
    align-items: flex-end;
  }
  
  .mini-op {
    font-size: 20rpx;
    padding: 6rpx 16rpx;
  }
  