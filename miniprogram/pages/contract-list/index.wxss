.container { padding: 20rpx; }
.header { margin-bottom: 20rpx; }
.title { font-size: 34rpx; font-weight: 600; }
.empty { color: #888; padding: 40rpx 0; text-align: center; }
.row {
  display: flex; align-items: center; justify-content: space-between;
  padding: 50rpx; border-bottom: 1px solid #f0f0f0;
}
.meta .primary { font-size: 40rpx; font-weight: 520; }
.meta .sub { color: #999; font-size: 30rpx; margin-top: 6rpx; }
.ops { display: flex; gap: 12rpx; align-items:center; }
.op { border-radius: 10rpx; }
.op.danger { color: #e5484d; border: 1px solid #e5484d; }
.load-more { text-align: center; margin-top: 20rpx; }
.primary.clickable { text-decoration: underline; }
.primary.disabled { opacity: 0.7; }
.icon-btn { width:75rpx; height:75rpx; border-radius:10rpx; display:flex; align-items:center; justify-content:center; background:#f5f5f5; }
.icon-btn--hover { opacity: .7; }
.icon-btn .icon { width:64rpx; height:64rpx; }
.icon-btn.danger { background:#fff0f0; }