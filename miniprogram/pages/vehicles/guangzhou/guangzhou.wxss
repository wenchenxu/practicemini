.container { padding: 24rpx; }
.toolbar { display: flex; gap: 16rpx; margin-bottom: 16rpx; }
.create-box { background: #fff; border-radius: 12rpx; padding: 16rpx; margin-bottom: 16rpx; }
.create-title { font-size: 30rpx; font-weight: 600; margin-bottom: 8rpx; }
.row { margin-bottom: 12rpx; }
.input { border: 1px solid #eee; border-radius: 8rpx; padding: 12rpx; }
.picker { padding: 12rpx; background: #f7f7f7; border-radius: 8rpx; }
.list .item { display: flex; justify-content: space-between; align-items: center; background: #fff; border-radius: 12rpx; padding: 20rpx; margin-bottom: 16rpx; }
.meta .plate { font-size: 36rpx; font-weight: 600; }
.meta .vin { color: #888; font-size: 26rpx; margin-top: 4rpx; }
.status { color: #07c160; }

