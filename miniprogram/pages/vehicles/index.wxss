/* 全局背景 */
page {
    background-color: #f7f8fa;
    padding-bottom: 50rpx;
  }
  
  .page-container {
    /* 留出顶部 dropdown 的高度，防止内容被遮挡 (Vant dropdown 默认 height 50px) */
    /* 但 Vant dropdown 默认是不占位的，所以这里其实还好 */
  }
  
  /* 卡片通用样式 */
  .card-box {
    background: #ffffff;
    margin: 24rpx;
    border-radius: 16rpx;
    padding: 24rpx;
    box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
  }
  
  /* --- 概览卡片 --- */
  .overview-card {
    padding-bottom: 30rpx;
  }
  .overview-header {
    font-size: 28rpx;
    color: #646566;
    margin-bottom: 30rpx;
    font-weight: 600;
  }
  .overview-content {
    display: flex;
    align-items: center;
  }
  
  /* 左侧环形图 */
  .chart-area {
    width: 40%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .circle-text {
    text-align: center;
    line-height: 1.2;
  }
  .rate-num {
    font-size: 36rpx;
    font-weight: bold;
    color: #323233;
  }
  .unit {
    font-size: 24rpx;
  }
  .rate-label {
    font-size: 24rpx;
    color: #969799;
    margin-top: 8rpx;
  }
  
  /* 右侧网格 */
  .grid-area {
    width: 60%;
    display: flex;
    flex-wrap: wrap;
  }
  .stat-item {
    width: 50%;
    text-align: center;
    margin-bottom: 24rpx;
  }
  .stat-val {
    font-size: 40rpx;
    font-weight: bold;
    color: #323233;
    font-family: 'DINAlternate-Bold', sans-serif; /* 如果有数字字体 */
  }
  .stat-key {
    font-size: 24rpx;
    color: #969799;
    margin-top: 4rpx;
  }
  
  /* 颜色辅助类 */
  .text-green { color: #07c160; }
  .text-blue { color: #1989fa; }
  .text-orange { color: #ff976a; }
  
  /* --- 预警卡片 --- */
  .warning-card {
    display: flex;
    align-items: center;
    background: #fffbe8; /* 浅黄色背景 */
    color: #ed6a0c;
    font-size: 28rpx;
    padding: 20rpx 24rpx;
  }
  
  /* --- 流水列表 --- */
  .section-title {
    margin: 32rpx 24rpx 16rpx;
    font-size: 28rpx;
    color: #969799;
    font-weight: 500;
  }
  .flow-list {
    padding: 0; /* van-cell-group 自带 padding 处理 */
    overflow: hidden;
  }
  
  /* 自定义图标样式 */
  .cell-icon {
    width: 36rpx;
    height: 36rpx;
    line-height: 36rpx;
    text-align: center;
    border-radius: 6rpx;
    font-size: 22rpx;
    color: #fff;
    margin-right: 16rpx;
    display: inline-block;
  }
  .icon-out { background: #1989fa; }
  .icon-in  { background: #07c160; }
  .icon-fix { background: #ff976a; }
  
  /* --- 弹窗 --- */
  .popup-title {
    text-align: center;
    font-size: 32rpx;
    font-weight: bold;
    padding: 30rpx 0;
    border-bottom: 1rpx solid #eee;
  }